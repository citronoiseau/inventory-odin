<div class="horse">
  <div>
    <%= horse.name %> — Breed: <%= horse.breed %> — Age: <%= horse.age %> — Rider: <%= horse.rider %>
  </div>
  <div class="image-container">
    <img src="<%= horse.image_url %>" alt="<%= horse.name %>" />
  </div>
  <div class="action-container">
    <a>Edit Horse</a>
    <form
      action="/delete/<%= horse.id %>"
      method="GET"
      onsubmit="return confirm('Delete this horse?')"
    >
      <button type="submit">Delete Horse</button>
    </form>
  </div>
</div>
